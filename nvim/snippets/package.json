{
  "name": "pithyvimart-snippets",
  "engines": {
    "vscode": "^0.1.0"
  },
  "contributes": {
    "snippets": [
      {
        "language": [
          "all"
        ],
        "path": "./snippets/global.json"
      },
      {
        "language": ["cpp"],
        "path": "./snippets/cpp/cpp.json"
      },
      {
        "language": "tex",
        "path": "./snippets/tex/tex.json"
      },
      {
        "language": "bib",
        "path": "./snippets/tex/bib.json"
      },
      {
        "language": "markdown",
        "path": "./snippets/markdown/markdown.json"
      },
      {
        "language": "python",
        "path": "./snippets/python/python.json"
      },
      {
        "language": ["shellscript", "shell", "sh", "zsh"],
        "path": "./snippets/shell/shell.json"
      },
      {
        "language": "json",
        "path": "./snippets/json/json.json"
      }
    ]
  }
}

