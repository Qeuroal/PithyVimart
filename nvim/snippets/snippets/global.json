{
  "Shebang": {
    "prefix": ["gshb"],
    "body": [
      "#!/usr/bin/env ${1:bash}${0}"
    ],
    "description": "Shebang for any file"
  },
  "modeline": {
    "prefix": ["modeline"],
    "body": [
      "vim:ft=${1:bash}:tw=${2:120}:ts=${3:4}:${4:et}:shiftwidth=${5:4}:${0}"
    ],
    "description": [
      "Vim modeline, Requiring Manual Annotation\n",
      "- tw: textwidth\n",
      "- ts: tabstop\n",
      "- et/noet: expandtab/noexpandtab\n",
      "NOTE: `:e` reload file"
    ]
  }
}

